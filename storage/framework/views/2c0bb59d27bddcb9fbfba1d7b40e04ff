										<?php
										$categories = \App\Models\ListingCategory::where('parent', 0)->get();
										?>
										<?php foreach($categories as $cat): ?>
											<option value="<?php echo e($cat->id); ?>"<?php echo $category->parent == $cat->id ? ' selected' : null; ?>><?php echo e($cat->title); ?></option>
